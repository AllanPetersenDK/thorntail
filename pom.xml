<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.jboss.unimbus</groupId>
  <artifactId>unimbus-parent</artifactId>
  <version>1.0.0-SNAPSHOT</version>

  <name>uNimbus Parent</name>

  <packaging>pom</packaging>

  <properties>
    <version.cdi>2.0</version.cdi>
    <version.weld>3.0.2.Final</version.weld>

    <version.resteasy>3.1.4.Final</version.resteasy>

    <version.undertow>1.4.21.Final</version.undertow>

    <version.hibernate>5.2.12.Final</version.hibernate>
    <version.c3p0>0.9.5.2</version.c3p0>
    <version.h2>1.4.187</version.h2>
    <version.mysql>5.1.39</version.mysql>
    <version.arjuna>5.7.1.Final</version.arjuna>

    <version.mp-config>1.2</version.mp-config>

    <version.fest-assert>1.4</version.fest-assert>
    <version.junit>4.12</version.junit>
    <version.rest-assured>3.0.6</version.rest-assured>

    <version.maven-compiler-plugin>3.7.0</version.maven-compiler-plugin>

    <version.jboss-logging-annotations>2.1.0.Final</version.jboss-logging-annotations>

    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <version.java>8</version.java>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.jboss.unimbus</groupId>
        <artifactId>core</artifactId>
        <version>1.0.0-SNAPSHOT</version>
      </dependency>

      <dependency>
        <groupId>org.jboss.unimbus</groupId>
        <artifactId>datasources</artifactId>
        <version>1.0.0-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>org.jboss.unimbus</groupId>
        <artifactId>health</artifactId>
        <version>1.0.0-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>org.jboss.unimbus</groupId>
        <artifactId>jaxrs</artifactId>
        <version>1.0.0-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>org.jboss.unimbus</groupId>
        <artifactId>jdbc</artifactId>
        <version>1.0.0-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>org.jboss.unimbus</groupId>
        <artifactId>jndi</artifactId>
        <version>1.0.0-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>org.jboss.unimbus</groupId>
        <artifactId>jpa</artifactId>
        <version>1.0.0-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>org.jboss.unimbus</groupId>
        <artifactId>json-p</artifactId>
        <version>1.0.0-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>org.jboss.unimbus</groupId>
        <artifactId>jta</artifactId>
        <version>1.0.0-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>org.jboss.unimbus</groupId>
        <artifactId>metrics</artifactId>
        <version>1.0.0-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>org.jboss.unimbus</groupId>
        <artifactId>security</artifactId>
        <version>1.0.0-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>org.jboss.unimbus</groupId>
        <artifactId>servlet</artifactId>
        <version>1.0.0-SNAPSHOT</version>
      </dependency>

      <dependency>
        <groupId>org.jboss.unimbus</groupId>
        <artifactId>test</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <scope>test</scope>
      </dependency>

      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>${version.junit}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.easytesting</groupId>
        <artifactId>fest-assert</artifactId>
        <version>${version.fest-assert}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>io.rest-assured</groupId>
        <artifactId>rest-assured</artifactId>
        <version>${version.rest-assured}</version>
        <scope>test</scope>
      </dependency>

    </dependencies>
  </dependencyManagement>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.easytesting</groupId>
      <artifactId>fest-assert</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>io.rest-assured</groupId>
      <artifactId>rest-assured</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.jboss.logging</groupId>
      <artifactId>jboss-logging-annotations</artifactId>
      <version>${version.jboss-logging-annotations}</version>
      <scope>provided</scope>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>org.jboss.logging</groupId>
      <artifactId>jboss-logging-processor</artifactId>
      <version>${version.jboss-logging-annotations}</version>
      <scope>provided</scope>
      <optional>true</optional>
    </dependency>
  </dependencies>

  <modules>
    <module>core</module>
    <module>datasources</module>
    <module>health</module>
    <module>jaxrs</module>
    <module>jdbc</module>
    <module>jndi</module>
    <module>jpa</module>
    <module>jta</module>
    <module>json-p</module>
    <module>metrics</module>
    <module>security</module>
    <module>servlet</module>

    <module>test</module>
    <module>testsuite</module>
  </modules>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>${version.maven-compiler-plugin}</version>
          <configuration>
            <source>${version.java}</source>
            <target>${version.java}</target>
            <showWarnings>true</showWarnings>
            <showDeprecation>true</showDeprecation>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

</project>
